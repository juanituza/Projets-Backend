                    <i class="fa fa-trash"></i> Delete
                  </button>
                </div>

                <div class="d-flex align-items-center justify-content-center mb-1">
                  <small class="fa fa-star text-primary mr-1"></small>
                  <small class="fa fa-star text-primary mr-1"></small>
                  <small class="fa fa-star text-primary mr-1"></small>
                  <small class="fa fa-star text-primary mr-1"></small>
                  <small class="fa fa-star-half-alt text-primary mr-1"></small>
                  <small>(99)</small>
                </div>
              </div>
            </div>
          </div>

          {{/each}}
          {{/ifRoleAdmin}}
          {{#ifRoleIsPremiumOrUser user.role }}
          {{#each allProducts }}


          <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
            <div class="product-item bg-light mb-4">
              <div class="product-img position-relative overflow-hidden">

                <img class="img-fluid" src="{{this.thumbnail}}" alt="Products" />
                <div class="product-action">

                </div>
              </div>
              <div class="text-center py-4"></div>

              <div class="text-center py-4">
                <h4>{{this.title}} {{this.description}} </h4>
                <div class="d-flex align-items-center justify-content-center mt-2">
                  <h6>${{this.price}}</h6>
                </div>
                <div class="d-flex align-items-center justify-content-center mt-2">
                  <h7>Stock: {{this.stock}}</h7>
                </div>
                <div class="d-flex align-items-center justify-content-center mt-2">
                  <h7>Tienda: {{this.owner}}</h7>
                </div>
                <div class="text-center m-3">
                  <button class="btn btn-warning ButtonProduct" id="{{this.id}}">
                    <i class="fa fa-shopping-cart"></i>
                    Add product in Cart
                  </button>

                </div>


                <div class="d-flex align-items-center justify-content-center mb-1">
                  <small class="fa fa-star text-primary mr-1"></small>
                  <small class="fa fa-star text-primary mr-1"></small>
                  <small class="fa fa-star text-primary mr-1"></small>
                  <small class="fa fa-star text-primary mr-1"></small>
                  <small class="fa fa-star-half-alt text-primary mr-1"></small>
                  <small>(99)</small>
                </div>
              </div>
            </div>
          </div>

          {{/each}}
          {{/ifRoleIsPremiumOrUser}}



          <div>
            <ul class="pagination justify-content-center">
              {{#if hasPrevPage}}
              <li class="page-item active"><a class="page-link" href="/products?page={{prevPage}}">Previous</a></li>
              {{else}}
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              {{/if}}
              <li class="page-item">
                <p class="page-link"> {{page}}</p>
              </li>
              {{#if hasNextPage}}
              <li class="page-item active">
                <a class="page-link" href="/products?page={{nextPage}}">Next</a>
              </li>
              {{else}}
              <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
              {{/if}}

            </ul>
          </div>

        </div>
      </div>
    </div>
    <!-- Shop Product End -->
  </div>


    <!-- Cart Start -->
    <div class="container-fluid">
        <div class="row px-xl-12">
            <div class="col-lg-12 table-responsive mb-5">
                <form id="createProduct" enctype="multipart/form-data">


                    <div class="divider d-flex align-items-center my-4">
                        <h1 class="text-center fw-bold mx-3 mb-0">Product</h1>
                    </div>


                    <div class="form-outline mb-4">
                        <input type="text" name="title" class="form-control form-control-lg" placeholder="Title" />
                        <label class="form-label">Title:</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="text" name="description" class="form-control form-control-lg"
                            placeholder="description" />
                        <label class="form-label">Description</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="Number" name="price" class="form-control form-control-lg" placeholder="Price" />
                        <label class="form-label">Price</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="file" name="thumbnail" class="form-control form-control-lg" placeholder="thumbnail"
                            multiple />
                        <label class="form-label">Thumbnail</label>
                    </div>
                    <div class="form-outline mb-3">
                        <input type="text" name="code" class="form-control form-control-lg" placeholder="Code" />
                        <label class="form-label" for="form3Example4">Code</label>
                    </div>

                    <div class="form-outline mb-5">
                        {{!-- <label for="select">Select status:</label>
                        <select id="" class="form-select form-select-lg">
                            <option value="true">True</option>
                            <option value="false">False</option>
                        </select> --}}
                        <input type="text" name="status" class="form-control form-control-lg" placeholder="Status" />
                        <label class="form-label" for="form3Example4">Status</label>
                    </div>
                    <div class="form-outline mb-3">
                        <input type="text" name="stock" class="form-control form-control-lg" placeholder="Stock" />
                        <label class="form-label" for="form3Example4">Stock</label>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                            style="padding-left: 2.5rem; padding-right: 2.5rem;">Create Product</button>


                    </div>

                </form>

            </div>

        </div>
    </div>

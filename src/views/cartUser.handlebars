    <!-- Cart Start -->
    <div class="container-fluid ">
        <div class="row  align-items-center bg-light py-3">
            <div class="col-lg-12 table-responsive-sm mb-5">
                <table class="col-lg-12 table table-light table-borderless table-hover text-center mb-0 " >
                    <thead class="thead-dark">
                        <tr>
                            <th>Imagen</th>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            
                            <th>Remove</th>
                        </tr>
                    </thead>
                     
    

                    <tbody class="align-middle">
                      {{#with cartSelected as |cart|}}
                        {{#each cart.products}}
                        <tr>
                            
                            <td class="align-middle">
                                {{#each product.thumbnail}}
                                <img src="{{this}}" alt="{{../this.product.description}}" style="width: 50px;">
                                {{/each}} 
            
                            </td>
                            <td class="align-middle">{{product.title}} {{product.description}}</td>   
                            <td class="align-middle">${{product.price}}</td>
                            <td class="align-middle">
                              <form class="quantity-form">

                                <div class="input-group quantity mx-auto" style="max-width: 200px;">
                                  <div class="input-group-prepend">
                                  <button type="button" class="btn btn-sm btn-primary btn-minus m-1">
                                    <i class="fa fa-minus"></i>
                                  </button>
                                  </div>
                                  <input id="quantityInput_{{product._id}}" name="quantityInput_{{product._id}}" type="text"
                                    class="form-control form-control-sm bg-secondary border-0 text-center m-1" value="{{quantity}}"  data-quantity="{{quantity}}" readonly />
                                  <div class="input-group-append">
                                    <button type="button" class="btn btn-sm btn-primary btn-plus m-1">
                                      <i class="fa fa-plus"></i>
                                    </button>
                                  </div>
                                  <div>
                                    <button type="button" class="btn btn-sm btn-success btn-accept productId m-1" data-cid="{{cart._id}}"
                                      data-pid="{{product._id}}">
                                      Guardar
                                    </button>
                                  </div>
                                </div>
                              </form>


                            </td>
                          
                            <td class="align-middle"><button class="btn btn-sm btn-danger deleteProd"  id="{{product._id}}"><i class="fa fa-times"></i></button></td>
                        </tr>
                        {{/each}}
                        {{/with}}
                        
                    </tbody>
                </table>
                <div class="col-lg-12  d-flex justify-content-end">
                   
                        
                        <button type="button" class=" col-lg-4  btn btn-warning mt-4 purchase" id="purchase">Purchase</button>
                </div>
            </div>
            
        </div>
    </div>

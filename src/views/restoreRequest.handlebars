<section class="vh-100 m-5">
  <div class="container-fluid h-custom">
    <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
      <div class="col-lg-4 m-3">
        <a href="/" class="text-decoration-none">
          <span class="h1 text-uppercase text-primary bg-dark px-2">MK</span>
          <span
            class="h1 text-uppercase text-dark bg-primary px-2 ml-n1"
          >Rock</span>
        </a>
      </div>
      <div class="row d-flex justify-content-center align-items-center h-100">

        <div class="col-md-9 col-lg-6 col-xl-5">
          <img src="img/sendMail.jpg" class="img-fluid" alt="Sample image" />
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <form id="restoreRequestForm">
            <div
